<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRLSlider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333B43">

    <TextView
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="Transforma tu viaje con iTravel"
        android:textSize="35sp"
        android:textAlignment="center"
        android:paddingTop="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black">
    </TextView>

    <LinearLayout
        android:id="@+id/tent_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/text_1"
        android:weightSum="9"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/idIVSlider"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@drawable/user_icon">

        </ImageView>

        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Inicia Sesión y comienza a viajar"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20dp">

        </TextView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/tent_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/tent_1"
        android:weightSum="9"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@drawable/bus_icon">

        </ImageView>

        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Escoge la empresa transportista de tu preferencia"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20dp">

        </TextView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/tent_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tent_2"
        android:weightSum="9"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@drawable/gps_iconi">

        </ImageView>

        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Mira las rutas por las que viaja la empresa elegida"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20dp">

        </TextView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/tent_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tent_3"
        android:weightSum="9"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@drawable/timer_icon">

        </ImageView>

        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Verífica la disponibilidad de asientos antes de reservar uno"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20dp">

        </TextView>



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tent_4"
        android:weightSum="9"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@drawable/pago_icon">

        </ImageView>

        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Reserva y paga en línea tu servicio de transporte"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20dp">

        </TextView>



    </LinearLayout>

</RelativeLayout>
